<div class="container text-center">
  <h1>Add a tag to <%= @plant.name %></h1>
  <%= simple_form_for([@plant, @plant_tag]) do |f| %>
    <%= f.input :tag, collection: Tag.all,
      input_html: { multiple: true, class: "select2-multiple" }, include_hidden: false %>
    <%= f.submit "Add tag", class: "btn btn-success" %>
  <% end %>
</div>